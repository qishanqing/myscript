<% if @error %>
<div id='error_explanation'> <%= @error%>
</div>
<% end %>

<%= javascript_tag "window.onload = builder_onload" %>

<h1 style="text-align:center">DevHelpers</h1>
<form method="post" id="vmlinux" action="/dev_helpers/new">
	<label>用户邮箱</label><br>
	<%= email_field_tag "email", params[:email],:value =>"@dafy.com",:cols =>60 %><br><br>	
	<label>创建类型</label><br><br>
	<%= params[:types] = "tag"unless params[:type]; nil %>
	<%= radio_button_tag "types","tag", params[:types] == "tag" %>新建tag&nbsp;&nbsp;
	<%= radio_button_tag"types", "pl", params[:types] == "pl" %>项目查询&nbsp;&nbsp;<br><br>

	<label>分支名称:</label><br>
	<%= text_area_tag "branch", params[:branch],:class =>"test" %><br>

	<label>提交日志信息(大于5个字符 可不填)</label><br>
	<%= text_area_tag "message", params[:message],:class =>"test1" %><br>
	
	<label>创建完成后发送通知邮件人员名单(公司邮箱，以空格分隔，可不填)</label><br>
	<%= text_area_tag "extra_mails", params[:extra_mails],:class =>"test1" %><br>

	 <input type="submit" value="Submit">
	 <input name="authenticity_token"
	 	type="hidden"
		value="<%= form_authenticity_token %>"/>
