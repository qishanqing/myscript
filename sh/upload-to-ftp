#!/bin/bash
set -x

export BUILD_ID=dontkillme

## start code-generator "^\\s *#\\s *"
# generate-getopt d:dir
## end code-generator
## start generated code
TEMP=$(getopt -o tfd: --long "dir:"  -n $(basename $0) -- "$@")
dir=
todo=
eval set -- "$TEMP"
while true; do
    case "$1" in
        -d|--dir)
            dir=$2
            shift 2
            ;;
	-t)
	    todo=put
            shift
            ;;
	-f)
	    todo=get
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            die "internal error"
            ;;
    esac
done

## end generated code

if test $# = 0 -o -z "$dir"; then
    echo "Error: Usage $(basename $0) -d dir ftp-urls..."
    #mails_cm -i "Error: Usage $(basename $0) -d dir ftp-urls..."
fi

filename=$(basename "$dir")
name=$(dirname "$dir")/$(echo -n "$filename" | perl -npe 's,\.\d+\.tmp$,,')
if test -f "$dir"; then
    name=$dir
fi

(

    for ftp in "$@"; do
        ftp_dir=$(echo "$ftp" | perl -npe 's,.*?//.*?/,,')
        if test "$SMARTCM_TEST_FTP"; then
            ftp_dir=$ftp_dir/debug-ftp-upload
        fi
        ftp_host=$(echo "$ftp" | perl -npe 's,^(.*?//.*?/).*,$1,')
        for (( n = 0; n < 3; n++ )); do

	    if time lftp -c "connect $ftp_host;
                set ssl:verify-certificate no;
		cd $ftp_dir &&  $todo '${name}'";then
		break
            fi

            if test "$n" = 3; then
		echo "Upload $name from $ftp failed for too many times , re-run with upload-dir-to-ftp -d $dir $ftp"
            fi

            sleep 10
        done
    done
)
