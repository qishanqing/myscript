#!/bin/bash

set -e

if ! [ -d .git ];then
	exit
fi

remote=$(git remote -v | grep github.com*push | awk '{print $1}')
branch=$(git branch  |  awk '{print $2}')
message="rsync data"

if ! [[ $(git status -s | wc -l) == 0 ]];then
	git add . &&  git commit -m "${1:-$message}"
	git push -f $remote $branch:$branch
fi
 
