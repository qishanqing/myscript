#!/bin/bash

export LANG=zh_CN.UTF-8

YMDHMS()
{
    date +%Y-%m-%d-%H:%M:%S "$@" |tr -d \\n|
	if test $(basename $0) = now; then
            cat
	else
            perl -npe 's,:,.,g'
	fi
    echo -e
}
    
YMD()
{
    date +%Y-%m-%d "$@" |tr -d \\n|
	if test $(basename $0) = now; then
            cat
	else
            perl -npe 's,:,.,g'
	fi
    echo -e
}
