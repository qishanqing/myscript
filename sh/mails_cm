#!/bin/bash

:<<!
####预设置####
查看是否安装mailx，没有请先安装
which mailx

vim /etc/mail.rc 最后添加如下
set from=qishanqing@srdafy.com smtp=smtp.qiye.163.com smtp-auth-user=qishanqing@srdafy.com smtp-auth-password=Q smtp-auth=login

##############
!
set -e
export MAILRC=/etc/mail.rc
export LANG=zh_CN.UTF-8
cm_emails=qishanqing@indemind.cn

if test "$SMARTCM_EXTRA_MAIL"; then
    cm_emails="$cm_emails $SMARTCM_EXTRA_MAIL"
fi


## start code-generator "^\\s *#\\s *"
# generate-getopts  iinput
## end code-generator
## start generated code
input=false
OPTIND=1
while getopts 'i' opt; do
    case "$opt" in
	i)    input=true;;
	*)    echo Usage Error; exit 2;;
    esac
done
shift $(($OPTIND - 1))

## end generated code

if test "$input" = true; then
    cat
else
    echo
fi | /usr/bin/mailx  -s "$*" $cm_emails ||  true


